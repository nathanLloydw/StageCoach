<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_card"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="1.5dp"
    app:cardBackgroundColor="@color/fui_transparent"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/club_current_pic2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/avatar"
            app:sriv_border_color="#008fea"
            app:sriv_border_width="0dip"
            app:sriv_left_bottom_corner_radius="150dip"
            app:sriv_left_top_corner_radius="150dip"
            app:sriv_right_bottom_corner_radius="150dip"
            app:sriv_right_top_corner_radius="150dip" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/club_current_pic2"
            android:text="fullname"
            android:textColor="@color/design_default_color_on_secondary" />

        <ImageButton
            android:id="@+id/user_attendee"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:background="@color/lightRed"
            app:srcCompat="@drawable/ic_cross_black_24dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>