<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/club_cardWhole"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/club_card"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/club_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:gravity="left"
                    android:text="Club"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/club_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_delete_black_24dp" />

                <TextView
                    android:id="@+id/club_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/club_name"
                    android:text="TextView"
                    android:textColor="@color/browser_actions_bg_grey"
                    android:textSize="8dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/club_card_bottom"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:background="@color/CardBackground"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/club_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp" />

            <ImageButton
                android:id="@+id/club_attendence_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/club_stats_button"
                android:background="@null"
                app:srcCompat="@drawable/ic_people_black_24dp" />

            <ImageButton
                android:id="@+id/club_stats_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/club_edit_button"
                android:background="@null"
                app:srcCompat="@drawable/ic_assessment_black_24dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/ic_directions_black_24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/club_location"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/club_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/club_attendence_button"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="29dp"
                android:layout_toEndOf="@+id/imageView4"
                android:text="Newcastle Stadium"
                android:textColor="@color/colorWhite"
                android:textSize="10dp" />

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/club_image"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                app:srcCompat="@drawable/work"
                app:sriv_left_bottom_corner_radius="5dip"
                app:sriv_left_top_corner_radius="5dip"
                app:sriv_right_bottom_corner_radius="5dip"
                app:sriv_right_top_corner_radius="5dip" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>